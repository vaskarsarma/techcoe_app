<h1></h1>

<div class="row">
    <div class="col-lg-8">

        {{#each blogs}}

        <div class="col-sm-2">
            <div class="thumbnail">
                <a href="/viewblog/showdetails/{{this._id}}">
                    <img border="0" src="/images/article.png" title="article"></a> 
            </div>
        </div>

        <div class="col-lg-10 blogdata">

            <!-- Title -->
            <h3>{{this.topic}}</h3>

            <!-- Author -->
            <p class="lead">
                by <a href="#">{{this.createdby}}</a>
            </p>
            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> Posted on {{this.creationdate}}</p>

            <hr>

            <p class="lead view">{{{this.content}}}</p>

            <hr>
        </div>
        {{/each}}
    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Blog Search Well -->
        <div class="well">
            <h4>Blog Search</h4>
            <div class="input-group">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                </button>
                </span>
            </div>
            <!-- /.input-group -->
        </div>

        <!-- Blog Categories Well -->
        <div class="well">
            <h4>Blog Categories</h4>
            <div class="row">
                {{#each category}}
                <div class="col-lg-6">
                    <ul class="list-unstyled">
                        <li><a href="#">{{this.name}}</a>
                        </li>
                    </ul>
                </div>
                {{/each}}
            </div>
            <!-- /.row -->
        </div>

        <!-- Top Visited Side Widget Well -->
        <div class="well">
            <h4>Top Visit</h4>
            <p>display the top visited blogs.</p>
        </div>

    </div>
</div>

