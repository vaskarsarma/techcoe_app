    <link rel="stylesheet" href="/css/main.css">

    <link href="/css/style.css" rel="stylesheet"> 
    <link href="/css/mdb.css" rel="stylesheet"> 
    <link href="/plugins/themes/all-themes.css" rel="stylesheet" />

</head>

<body class="ls-closed">
    <header>
        <nav class="navbar navbar-toggleable-md navbar-dark">
            <div class="container">

                <!-- Brand and toggle get grouped for better mobile display -->
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav1" aria-controls="navbarNav1"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <strong>Blogger's Meet</strong>
                </a>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbarNav1">
                    {{#if user }}
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active"><a class="nav-link" href="/home">Home</a></li>
                        {{#IsAdmin user.admin}} {{/IsAdmin}}
                        <li class="nav-item"><a class="nav-link" href="/blog">Blogs</a></li>
                    </ul>
                    <form class="form-inline waves-effect waves-light">
                        <input class="form-control" type="text" placeholder="Search">
                    </form>
                    <ul class="nav-item navbar-nav navbar-right">
                        <li class="nav-item dropdown btn-group">
                            <a class="nav-link dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="/{{user._id}}/{{user._id}}.jpg" 
                            class="profile-image navbarimage four reloadimage"> {{user.name}} <b class="caret"></b>
                            </a>
                            <div class="dropdown-menu dropdown" aria-labelledby="dropdownMenu1">
                                <a class="dropdown-item" href="/myprofile/{{user._id}}">My Profile</a>
                                <a class="dropdown-item" href="/auth/logout">Log-out {{user.name}}</a>
                            </div>
                        </li>
                    </ul>
                    {{!-- {{else}}
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
                    </ul>
                    <div id="bloodhound">
                        <input class="typeahead " type="text" placeholder="Countries">
                    </div>
                    <ul class="nav-item navbar-nav navbar-right">
                        <li class="nav-item active"><a class="nav-link" href="/auth/login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/auth/userregistration">Sign-up</a></li>
                    </ul> --}}
                    {{/if}}
                </div>
            </div>
        </nav>
    </header>

    <section class="content">
        <div class="container-fluid">
            {{{body}}}
        </div>
    </section>

    {{> footer}}



    <script type="text/javascript" src="/js/jquery-2.2.3.min.js"></script>
    <script type="text/javascript" src="/js/alasql.min.js"></script>
    <script type="text/javascript" src="/js/typeahead.bundle.js"></script>
    <script type="text/javascript" src="/plugins/waitMe/waitMe.js"></script>
    <script type="text/javascript" src="/plugins/handlebars.js"></script>
    <script type="text/javascript" src="/plugins/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/plugins/sweetalert-dev.js"></script>    
    <script type="text/javascript" src="/js/highchart/highcharts.js"></script>
    <script type="text/javascript" src="https://code.highcharts.com/modules/exporting.js"></script>
    <script type="text/javascript" src="/js/common.js"></script>

</body>

</html>