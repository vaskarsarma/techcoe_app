<div class="col-sm-12">
  <h1>Create User</h1>
</div>

{{#if IsError }}
<div class="col-sm-6 text-success "><i>Error in insert</i></div>
{{/if}} {{#if IsUpdated }}
<div class="col-sm-6 text-success "><i>Profile inserted Successfully</i></div>
 <a class="button" href="/auth/login">Go to login</a>
{{else}}
<div class="main-content row">
  <div class="col-md-8 col-md-offset-2">

    <form class="form-horizontal" action="/auth/userregistration" method="POST">

      {{!--
      <div class="form-group">
        <div class="text-right">
          <a href="/admin/list"><img class="img-circle imgwidth" src="/images/list.jpg" alt="List of users"/></a>
          <a href="/home"><img class="img-circle imgwidth" src="/images/home.jpg" alt="Home"/></a>
        </div>
      </div>--}} {{#if errors }}
      <ul class="errors alert-danger">
        {{#each errors}}
        <li>{{this.msg}} </li>
        {{/each}}
      </ul>
      {{/if}}

      <div class="form-group">
        <label class="control-label col-sm-2" for="name">User Name:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="username" name="username" value="{{username}}" autofocus="autofocus">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="name">Full Name:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" value="{{name}}" autofocus="autofocus">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="email">Email:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="email" name="email" value="{{email}}">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="password">Password:</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="password" name="password" value="{{password}}">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="password2">Confirm Password:</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="password2" name="password2" value="{{password2}}">
        </div>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-10">
        <label class="control-label" for="admin">Is Admin: <input type="checkbox" id="admin" name="admin" value="yes" {{admin}} >
    </label>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Submit</button>
          <button type="reset" class="btn btn-default">Reset</button>
        </div>
      </div>
    </form>
  </div>
</div>
{{/if}}